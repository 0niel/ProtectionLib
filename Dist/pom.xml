<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>ProtectionLib</artifactId>
    <groupId>de.Ste3et_C0st.furniture</groupId>
    <version>1.2${furniture.tag}</version>
  </parent>

  <groupId>de.Ste3et_C0st.furniture</groupId>
  <artifactId>Dist</artifactId>
  <version>1.2${furniture.tag}</version>

  <name>Dist</name>

   <build>
       <directory>../target</directory>
       <finalName>ProtectionLib-${project.version}</finalName>
       <plugins>
           <plugin>
               <groupId>org.apache.maven.plugins</groupId>
               <artifactId>maven-shade-plugin</artifactId>
               <version>3.2.4</version>
               <executions>
                   <execution>
                       <phase>package</phase>
                       <goals>
                           <goal>shade</goal>
                       </goals>
                       <configuration>
                           <artifactSet>
                               <includes>
                                   <include>de.Ste3et_C0st.furniture:Core</include>
                                   <include>de.Ste3et_C0st.furniture:PlotSquaredV5</include>
                                   <include>de.Ste3et_C0st.furniture:PlotSquaredV6</include>
                                   <include>de.Ste3et_C0st.furniture:LocalLibary</include>
                               </includes>
                           </artifactSet>
                       </configuration>
                   </execution>
               </executions>
           </plugin>
       </plugins>
   </build>
   <dependencies>
       <dependency>
           <groupId>de.Ste3et_C0st.furniture</groupId>
           <artifactId>Core</artifactId>
           <version>${project.parent.version}</version>
       </dependency>
       <dependency>
           <groupId>de.Ste3et_C0st.furniture</groupId>
           <artifactId>PlotSquaredV5</artifactId>
           <version>${project.parent.version}</version>
       </dependency>
       <dependency>
           <groupId>de.Ste3et_C0st.furniture</groupId>
           <artifactId>PlotSquaredV6</artifactId>
           <version>${project.parent.version}</version>
       </dependency>
       <dependency>
           <groupId>de.Ste3et_C0st.furniture</groupId>
           <artifactId>LocalLibary</artifactId>
           <version>${project.parent.version}</version>
       </dependency>
   </dependencies>
</project>
